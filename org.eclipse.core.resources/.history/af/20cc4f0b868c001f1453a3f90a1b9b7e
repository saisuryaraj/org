public class UrlEncryptor {
    public static void main(String[] args) {
        try {
            String originalUrl = "https://tutorialsninja.com/demo/index.php?route=common/home"; // Replace with your actual URL
            String encryptedUrl = EncryptionUtil.encrypt(originalUrl);
            System.out.println("Encrypted URL: " + encryptedUrl);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
